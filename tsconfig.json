{
  "files": ["src/main.ts"],
  "exclude": [
    "node_modules",
    "__tests__",
    "test"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "dist",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es5",
      "es6"
    ],
  }
}
